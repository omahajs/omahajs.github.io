<div class="item-content">
    <header>
        <div class="item-content-icon{{#if technology}} {{ technology }}{{/if}}"></div>
        <div class="item-title">
            <span class="title">{{ title }}</span>
            <span class="subtitle">{{ subtitle }}</span>
        </div>
    </header>
    {{#if_eq type "post"}}
        <div class="item-details">
        {{#each body}}
            <p>{{ this }}</p>
        {{/each}}
        </div>
    {{/if_eq}}
</div>
